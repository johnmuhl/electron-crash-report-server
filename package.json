{
	"name": "electron-crash-report-server",
	"description": "Crash report server for Electron applications",
	"version": "2.0.0-pre",
	"license": "Unlicense",
	"author": "John Muhl",
	"homepage": "https://pacific-falls-32011.herokuapp.com/",
	"bugs": "https://github.com/johnmuhl/electron-crash-report-server/issues",
	"repository": "github:johnmuhl/electron-crash-report-server",
	"scripts": {
		"fmt": "run-p -cs fmt:* && yarn run lint --fix",
		"fmt:css": "prettier --loglevel warn --write 'assets/*.css'",
		"fmt:js": "prettier --loglevel warn --write '*.js'",
		"fmt:json": "prettier --loglevel warn --write '*.json'",
		"fmt:markdown": "prettier --loglevel warn --write '*.markdown'",
		"fmt:templates": "prettier --loglevel warn --write 'templates/*' --parser html",
		"lint": "eslint .",
		"start": "node index.js",
		"start:dev": "nodemon -w '*.*' -w templates/ -e handlebars,js index.js",
		"test": "yarn run lint"
	},
	"engines": {
		"node": "10.x",
		"yarn": "1.x"
	},
	"dependencies": {
		"@hapi/basic": "5.1.0",
		"@hapi/boom": "7.4.2",
		"@hapi/hapi": "18.3.1",
		"@hapi/inert": "5.2.0",
		"@hapi/vision": "5.5.2",
		"brok": "3.1.0",
		"dotenv": "8.0.0",
		"handlebars": "4.1.2",
		"hapi-pino": "5.4.1",
		"massive": "5.8.0",
		"minidump": "0.15.0",
		"pg-monitor": "1.1.0",
		"pretty-ms": "5.0.0"
	},
	"devDependencies": {
		"eslint": "5.x",
		"eslint-config-airbnb-base": "13.x",
		"eslint-config-oz": "github:johnmuhl/eslint-config-oz",
		"eslint-config-prettier": "4.x",
		"eslint-import-resolver-node": "0.x",
		"eslint-plugin-html": "5.x",
		"eslint-plugin-import": "2.x",
		"eslint-plugin-unicorn": "8.x",
		"nodemon": "1.x",
		"npm-run-all": "4.x",
		"pino-colada": "1.x",
		"prettier": "1.x"
	},
	"private": true
}
