{
	"name": "electron-crash-report-server",
	"description": "Crash report server for Electron applications",
	"version": "2.0.0-pre",
	"license": "Unlicense",
	"author": "John Muhl",
	"homepage": "https://pacific-falls-32011.herokuapp.com/",
	"bugs": "https://github.com/johnmuhl/electron-crash-report-server/issues",
	"repository": "github:johnmuhl/electron-crash-report-server",
	"scripts": {
		"fmt": "run-p -cs fmt:*",
		"fmt:css": "yarn run prettier --loglevel warn --write 'assets/*.css'",
		"fmt:js": "yarn run prettier --loglevel warn --write '*.js'",
		"fmt:json": "yarn run prettier --loglevel warn --write '*.json'",
		"fmt:markdown": "yarn run prettier --loglevel warn --write '*.markdown'",
		"fmt:templates": "yarn run prettier --loglevel warn --write 'templates/*' --parser html",
		"start": "node index.js",
		"start:dev": "nodemon -w '*.*' -w templates/ -e handlebars,js index.js",
		"test": "echo ⚠ no tests defined ⚠"
	},
	"engines": {
		"node": "10.x",
		"yarn": "1.x"
	},
	"dependencies": {
		"@hapi/boom": "7.4.2",
		"@hapi/hapi": "18.3.1",
		"@hapi/inert": "5.2.0",
		"@hapi/vision": "5.5.2",
		"brok": "3.1.0",
		"dotenv": "8.0.0",
		"esm": "3.2.22",
		"handlebars": "4.1.2",
		"massive": "5.8.0",
		"minidump": "0.15.0",
		"pg-monitor": "1.1.0",
		"pretty-ms": "5.0.0"
	},
	"devDependencies": {
		"nodemon": "1.x",
		"npm-run-all": "4.x",
		"prettier": "1.x"
	},
	"private": true
}
