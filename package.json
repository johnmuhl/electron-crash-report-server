{
	"name": "electron-crash-report-server",
	"description": "Crash report server for Electron applications",
	"version": "2.4.0",
	"license": "Unlicense",
	"author": "John Muhl",
	"homepage": "https://pacific-falls-32011.herokuapp.com/",
	"bugs": "https://github.com/johnmuhl/electron-crash-report-server/issues",
	"repository": "github:johnmuhl/electron-crash-report-server",
	"scripts": {
		"dev": "run-p dev.*",
		"dev.start": "nodemon -w '*.*' -w templates/ -e handlebars,js index.js",
		"dev.test": "nodemon --exec 'lab --shuffle test.js'",
		"fmt": "run-p -s fmt.*",
		"fmt.xo": "xo --fix --prettier",
		"fmt.prettier": "prettier --write '**/*.{css,handlebars,json,markdown,yml}'",
		"lint": "run-p -s lint.*",
		"lint.xo": "xo --prettier",
		"lint.prettier": "prettier -l '**/*.{css,handlebars,json,markdown,yml}'",
		"lint.stylelint": "stylelint 'assets/*.css'",
		"start": "node index.js",
		"test": "lab -cv --coverage-exclude test.js --shuffle test.js"
	},
	"engines": {
		"node": "10.x",
		"yarn": "1.x"
	},
	"dependencies": {
		"@hapi/basic": "5.1.0",
		"@hapi/boom": "7.4.2",
		"@hapi/hapi": "18.3.1",
		"@hapi/inert": "5.2.1",
		"@hapi/joi": "15.1.0",
		"@hapi/vision": "5.5.2",
		"brok": "4.0.0",
		"dotenv": "8.0.0",
		"form-data": "2.5.0",
		"gh-got": "8.1.0",
		"got": "9.6.0",
		"handlebars": "4.1.2",
		"hapi-pino": "6.0.1",
		"massive": "5.11.2",
		"minidump": "0.15.0",
		"nodemailer": "6.3.0",
		"pg-monitor": "1.2.1",
		"pretty-ms": "5.0.0"
	},
	"devDependencies": {
		"@hapi/code": "6.x",
		"@hapi/lab": "19.x",
		"nodemon": "1.x",
		"npm-run-all": "4.x",
		"pino-colada": "1.x",
		"stylelint": "10.x",
		"stylelint-config-recess-order": "2.x",
		"stylelint-config-standard": "18.x",
		"xo": "0.24.0"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"camelcase": 0,
			"import/extensions": 0
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"overrides": [
			{
				"files": "*.handlebars",
				"options": {
					"parser": "html"
				}
			}
		],
		"singleQuote": false,
		"trailingComma": "es5",
		"useTabs": true
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-recess-order"
		],
		"rules": {
			"indentation": "tab"
		}
	},
	"private": true
}
